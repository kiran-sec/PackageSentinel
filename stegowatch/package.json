{
  "name": "stegowatch",
  "displayName": "StegoWatch",
  "description": "Real-time security scanner that detects Unicode steganography, invisible characters, and code obfuscation patterns in VSCode extensions and source code.",
  "version": "1.0.0",
  "publisher": "kr-security",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "security",
    "code analysis",
    "steganography",
    "unicode",
    "obfuscation",
    "invisible characters",
    "code patterns",
    "code security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "malwareDetector.scanCurrentFile",
        "title": "Security: Scan Current File"
      },
      {
        "command": "malwareDetector.scanWorkspace",
        "title": "Security: Scan Entire Workspace"
      },
      {
        "command": "malwareDetector.showReport",
        "title": "Security: Show Anomaly Findings"
      },
      {
        "command": "malwareDetector.toggleRealTime",
        "title": "Security: Toggle Real-Time Scanning"
      },
      {
        "command": "malwareDetector.scanInstalledExtensions",
        "title": "Security: Scan All Installed Extensions"
      },
      {
        "command": "malwareDetector.showExtensionReport",
        "title": "Security: Show Extension Scan Report"
      },
      {
        "command": "malwareDetector.clearDiagnostics",
        "title": "Security: Clear Diagnostics and Rescan"
      }
    ],
    "configuration": {
      "title": "StegoWatch",
      "properties": {
        "malwareDetector.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable real-time malware detection"
        },
        "malwareDetector.detectUnicodeStego": {
          "type": "boolean",
          "default": true,
          "description": "Detect Unicode Variation Selectors and PUA characters (steganography)"
        },
        "malwareDetector.detectInvisibleChars": {
          "type": "boolean",
          "default": true,
          "description": "Detect zero-width and other invisible characters"
        },
        "malwareDetector.detectExcessiveIndentation": {
          "type": "boolean",
          "default": true,
          "description": "Detect lines with excessive indentation (>200 spaces)"
        },
        "malwareDetector.detectBidiOverride": {
          "type": "boolean",
          "default": true,
          "description": "Detect bidirectional text override attacks"
        },
        "malwareDetector.detectHomoglyphs": {
          "type": "boolean",
          "default": true,
          "description": "Detect homoglyph attacks (lookalike characters)"
        },
        "malwareDetector.detectSuspiciousEval": {
          "type": "boolean",
          "default": true,
          "description": "Detect eval() with encoding functions like atob()"
        },
        "malwareDetector.maxIndentation": {
          "type": "number",
          "default": 200,
          "description": "Maximum allowed indentation spaces before warning"
        },
        "malwareDetector.minStegoSequence": {
          "type": "number",
          "default": 10,
          "description": "Minimum sequence of PUA/VS characters to trigger warning"
        },
        "malwareDetector.excludeLanguages": {
          "type": "array",
          "default": [],
          "description": "File types to exclude from scanning (e.g., ['markdown', 'plaintext'])"
        },
        "malwareDetector.allowCJKinComments": {
          "type": "boolean",
          "default": true,
          "description": "Allow CJK characters in comments without warnings"
        },
        "malwareDetector.severity": {
          "type": "string",
          "default": "Warning",
          "enum": ["Error", "Warning", "Information"],
          "description": "Diagnostic severity level for detections"
        },
        "malwareDetector.autoScanNewExtensions": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan newly installed extensions for security issues"
        }
      }
    }
  },
  "scripts": {
    "test": "node test/runTest.js",
    "lint": "eslint .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/malware-steganography-detector"
  },
  "license": "MIT"
}

